@{
    ViewData["Title"] = "Danh sách phiếu xuất";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="xuathang-container d-flex">

    <!-- Sidebar lọc -->
    <aside class="filter-panel p-3" style="width:250px; background:#f8f9fa; border-right:1px solid #ddd;">
        <h4>Chi nhánh</h4>
        <select class="form-control mb-3">
            <option>CN Nguyễn Văn Cừ - Cần Thơ</option>
        </select>

        <h4>Trạng thái</h4>
        <div class="mb-3">
            <label><input type="checkbox" checked /> Phiếu tạm</label><br />
            <label><input type="checkbox" checked /> Đã xuất hàng</label><br />
            <label><input type="checkbox" /> Đã hủy</label>
        </div>

        <h4>Thời gian</h4>
        <div class="mb-3">
            <label><input type="radio" name="thoigian" checked /> Tháng này</label><br />
            <label><input type="radio" name="thoigian" /> Tùy chỉnh</label>
            <input type="date" class="form-control mt-1" />
        </div>

        <h4>Người tạo</h4>
        <input type="text" class="form-control mb-3" placeholder="Chọn người tạo" />

        <h4>Người xuất</h4>
        <input type="text" class="form-control mb-3" placeholder="Chọn người xuất" />
    </aside>

    <!-- Main content -->
    <div class="content flex-grow-1 p-3">

        <!-- Header bar -->
        <div class="header-bar d-flex justify-content-between align-items-center mb-3">
            <h2>Xuất hàng</h2>
            <div class="action-buttons d-flex gap-2">
                <!-- Nút tạo phiếu xuất -->
                <form asp-controller="XuatHang" asp-action="Create">
                    <button type="submit" class="btn btn-primary">➕ Tạo phiếu xuất</button>
                </form>

                <!-- Nút xuất file -->
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Xuất file
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Xuất Excel</a></li>
                        <li><a class="dropdown-item" href="#">Xuất PDF</a></li>
                    </ul>
                </div>

                <!-- Biểu tượng -->
                <button class="icon-btn btn btn-outline-secondary">⚙️</button>
                <button class="icon-btn btn btn-outline-secondary">❓</button>
            </div>
        </div>

        <!-- Bảng danh sách phiếu xuất -->
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Mã phiếu</th>
                    <th>Khách hàng</th>
                    <th>Ngày tạo</th>
                    <th>Người tạo</th>
                    <th>Trạng thái</th>
                    <th>Tổng tiền</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>PX001</td>
                    <td>Khách hàng A</td>
                    <td>05/11/2025</td>
                    <td>Nguyễn Văn B</td>
                    <td>Phiếu tạm</td>
                    <td>8,000,000</td>
                    <td>
                        <button class="btn btn-sm btn-success" onclick="xemChiTiet('PX001')">Xem</button>
                    </td>
                </tr>
                <tr>
                    <td>PX002</td>
                    <td>Khách hàng B</td>
                    <td>06/11/2025</td>
                    <td>Trần Thị C</td>
                    <td>Đã xuất hàng</td>
                    <td>12,500,000</td>
                    <td>
                        <button class="btn btn-sm btn-success" onclick="xemChiTiet('PX002')">Xem</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script>
    function xemChiTiet(maPhieu) {
        alert("Hiển thị chi tiết phiếu: " + maPhieu);
    }
</script>
